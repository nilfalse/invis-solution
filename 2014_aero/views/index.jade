html
  head
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width initial-scale=1")
    title!= title
    link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
  body
    .container.theme-showcase(role="main")
      .page-header
        h1 Search 
          img#throbber(src="loader.gif")
      .row
        form#search.col-md-6
          .form-group
            label IATA:
              input.code.form-control(name="code" placeholder="XXX" autofocus maxlength=3)
            input.btn.btn-default(type="submit" value="Search")
      .panel.panel-danger.hidden
        #errors.panel-body
      .page-header
        h1 History 
          small (grid is editable)
      .col-md-12
        .row
          table#history.table
            thead
              tr
                th
                th Search time
                th IATA code
                th Name
                th Latitude
                th Longtitude
                th Timezone
            tbody
            tfoot
              tr
                td(colspan=7)
                  p.text-center.text-muted No items to show.
    script#tpl_row(type="x-tmpl-mustache").
      <tr class="code_{{ code }}" data-airport-code="{{ code }}">
      <td><button type="button" class="btn btn-default btn-sm button-pull"><span class="glyphicon glyphicon-trash"></span></button></td>
      <td>{{ created_at }}</td>
      <td>{{ code }}</td>
      <td data-field-name="name" contenteditable>{{ name }}</td>
      <td data-field-name="lat" contenteditable>{{ lat }}</td>
      <td data-field-name="lon" contenteditable>{{ lon }}</td>
      <td data-field-name="tz" contenteditable>{{ tz }}</td></tr>
    script(src="//yastatic.net/jquery/2.1.1/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js")
    script(src="index.js")

